{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-shadow": "error",
        "brace-style": "error",
        "eol-last": [
            "error",
            "always"
        ],
        "no-trailing-spaces": "error",
        "no-whitespace-before-property": "error",
        "space-infix-ops": "error",
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "no-console": 0,
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ],
        "space-before-blocks": "error",
        "arrow-spacing": [
          "error"
        ]
    }
}
